print("Calculadora basica")
print("Operações disponíveis: +, -, *, /")

def get_numero(mensagem):
    while True:
        try:
            return float(input(mensagem))
        except ValueError:
            print("Erro: Digite um número válido!")
            
# Entrada de dados
num1 = get_numero("Digite o primeiro número: ")
operacao = input("Digite a operação (+, -, *, /): ")
num2 = get_numero("Digite o segundo número: ")

# Logica das operacoes
if operacao == "+":
    resultado = num1 + num2
    print(f"Resultado: {num1} + {num2} = {resultado}")
        

elif operacao == "-":
    resultado = num1 - num2
    print(f"Resultdo: {num1} - {num2} = {resultado}")
        

elif operacao == "*":
    resultado = num1 * num2
    print(f"Resultdo: {num1} * {num2} = {resultado}")
       

elif operacao == "/":
    if num2 != 0:
        resultado = num1 / num2
        print(f"Resultdo: {num1}/ {num2} = {resultado}")
    else:
        print("Erro: Divisão por zero")
        
else:
    print("Operação inválida")
